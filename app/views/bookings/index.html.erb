<div class="container">
  <% if @bookings_as_owner.any?%>
    <h1 class="bookings-title"> Bookings as owner </h1>
    <div>
      <% @bookings_as_owner.each do |booking| %>
        <div class="cardlist my-3">
          <% if booking.surfboard.photo.attached? %>
            <%= cl_image_tag booking.surfboard.photo.key, class: "board-img" %>
          <% else  %>
            <%= image_tag "surfboard_placeholder.png", class: "board-img" %>
          <% end %>
          <div class="card-product-infos">
            <%# add user name tommorow %>
            <div class="header-price">
              <h2> Renter: <%= booking.user.first_name %></h2>

              <p class="booking-status">
                Status: <%= booking.status.capitalize %>
              </p>

            </div>

            <div class="d-flex justify-content-between align-items-center">
              <div class="categories">
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "surfboard_icon.png", width: "12px" %> Board ype</p>
                  </div>
                  <p><strong><%= booking.surfboard.category %></strong></p>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "calender_icon.png", width: "12px" %> Check-in</p>
                  </div>
                  <p><strong><%= booking.start_date.strftime("%b %d, %Y")%></strong></p>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "calender_icon.png", width: "12px" %>Check-out</p>
                  </div>
                  <p><strong><%= booking.end_date.strftime("%b %d, %Y")%></strong></p>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "location_icon.png", width: "12px" %>Location</p>
                    <p><strong><%= booking.surfboard.location%></strong></p>
                  </div>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "price_icon.png", width: "12px" %>Total Price</p>
                    <p><strong><%= booking.total_price%>k IDR</strong></p>
                  </div>
                </div>



              </div>
              <% if booking.status == "pending" %>
                <%= button_to "Accept", accept_booking_path(booking), method: :patch, class: "btn accept-deny-button btn-sm btn-success me-2"%>
                <%= button_to "Deny", deny_booking_path(booking), method: :patch, class: "btn accept-deny-button btn-sm btn-danger"%>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <%end %>

  <% if @bookings_as_renter.any? %>
    <h1 class="bookings-title"> Bookings as renter </h1>

    <div style="display: block">
      <% @bookings_as_renter.each do |booking| %>
        <div class="cardlist my-3">
          <% if booking.surfboard.photo.attached? %>
            <%= cl_image_tag booking.surfboard.photo.key, class: "board-img" %>
          <% else  %>
            <%= image_tag "surfboard_placeholder.png", class: "board-img" %>
          <% end %>
          <div class="card-product-infos">
            <%# add user name tommorow %>
            <div class="header-price">
              <h2> Owner: <%=  booking.surfboard.user.first_name %></h2>
              <p class="booking-status">
                Status: <%= booking.status.capitalize %>
              </p>
            </div>

            <div class="d-flex justify-content-between align-items-center">
              <div class="categories">
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "surfboard_icon.png", width: "12px" %> Board Type</p>
                  </div>
                  <p><strong><%= booking.surfboard.category %></strong></p>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "calender_icon.png", width: "12px" %> Check-in</p>
                  </div>
                  <p><strong><%= booking.start_date.strftime("%b %d, %Y")%></strong></p>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "calender_icon.png", width: "12px" %>Check-out</p>
                  </div>
                  <p><strong><%= booking.end_date.strftime("%b %d, %Y")%></strong></p>
                </div>
                <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "location_icon.png", width: "12px" %>Location</p>
                    <p><strong><%= booking.surfboard.location%></strong></p>
                  </div>
                </div>
                  <div class="category p-3">
                  <div class="d-inline">
                    <p><%= image_tag "price_icon.png", width: "12px" %>Total Price</p>
                    <p><strong><%= booking.total_price%>k IDR</strong></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <%end%>
</div>
